.jobitem {
  position: relative;
  height: 210rpx;
  background-color: #FFFFFF;
  padding-top: 20rpx;
  border-bottom: 1px solid #E5E5E5;
}

.jobitem .l1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.jobitem .jobname {
  max-width: 520rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
  font-weight: 500;
  color: #000000;
  overflow: hidden;
}

.jobitem .providesalary {
  font-size: 28rpx;
  font-weight: 500;
  color: #FF891C;
}

.jobitem .l2 {
  display: flex;
  margin-top: 36rpx;
}

.jobitem .l2 .more {
  width: 128rpx;
  height: 52rpx;
  background-color: #fcecec;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 52rpx;
  text-align: center;
  color: #DD4645;
  margin-right: 14rpx;
}

.jobitem .l2 .coname {
  height: 52rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  background-color: #F3F3F3;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 52rpx;
  text-align: center;
  color: #666666;
}

.jobitem .l3 {
  display: flex;
  margin-top: 18rpx;
  font-size: 24rpx;
  color: #999999;
}

.jobitem .l3 .font-icon::before {
  margin-right: 10rpx;
}

.jobitem .l3 .font-icon {
  margin-right: 34rpx;
}

.nojobdata {
  margin-top: 28rpx;
  text-align: center;
}


.jobs {
  width: 670rpx;
  margin: 0 auto;
}


/* 职位卡片 */

.jobs .job-item {
  width: 670rpx;
  height: 230rpx;
  background: #FFFFFF;
  border-radius: 8px;
  margin-top: 16rpx;
  position: relative;
}

.jobs .job-item .jobname {
  height: 40rpx;
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #000000;
  position: absolute;
  left: 16rpx;
  top: 20rpx;
}

.jobs .job-item .wage {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #17ADCA;
  position: absolute;
  right: 16rpx;
  top: 20rpx;
}

.jobs .job-item .condition {
  height: 34rpx;
  display: flex;
  align-items: center;
  position: absolute;
  top: 90rpx;
}

.jobs .job-item .condition .condition-item {
  display: flex;
  height: 34rpx;
  margin: 0 16rpx;
  align-items: center;
}

.jobs .job-item .condition .condition-item .con-img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.jobs .job-item .condition .condition-item .con-text {
  height: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: #999999;
}

.jobs .job-item .line {
  width: 670rpx;
  height: 2px;
  background: #F6F6F6;
  position: absolute;
  bottom: 80rpx;
}

.jobs .company {
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
}

.jobs .company .coimg {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  margin-right: 8rpx;
}

.jobs .company .coname {
  height: 80rpx;
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 80rpx;
  color: #333333;
}

.jobs .company .tocobuttom {
  display: flex;
  align-items: center;
  position: absolute;
  right: 16rpx;
}

.jobs .company .tocobuttom .text {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 80rpx;
  color: #999999;
  margin-right: 8rpx;
}

.jobs .company .tocobuttom .right-img {
  width: 32rpx;
  height: 32rpx;
}

