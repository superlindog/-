.select {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
}

.select .head {
  height: 176rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 38rpx 40rpx 48rpx 40rpx;
  background: #FFFFFF;
  position: relative;
  display: flex;
  align-items: center;
}

.select .head .title {
  height: 66rpx;
  font-size: 48rpx;
  font-weight: bold;
  line-height: 66rpx;
  color: #333333;
}

.select .head .reset {
  display: flex;
  align-items: center;
  position: absolute;
  right: 232rpx;
}

.select .head .reset .resetimg {
  height: 32rpx;
  width: 32rpx;
  margin-right: 8rpx;
}

.select .head .reset .text {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
  color: #17ADCA;
}

.select .head .confirmbtn {
  position: absolute;
  right: 40rpx;
  width: 160rpx;
  height: 64rpx;
  background: #17ADCA;
  border-radius: 6rpx;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 64rpx;
  color: #FFFFFF;
  text-align: center;
}

.select .selcard {
  width: 100%;
  box-sizing: border-box;
  padding: 0 40rpx 64rpx 40rpx;
  background: #FFFFFF;
  position: relative;
}

.select .selcard .title {
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 44rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.select .selcard .selectitem {
  display: inline-block;
  height: 48rpx;
  background: #F4F4F4;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 48rpx;
  color: #333333;
  margin-top: 16rpx;
  margin-right: 16rpx;
}

.select .selcard .selectitem-active {
  background: #F3FBFD;
  color: #17ADCA;
}

.job51 {
  width: 100%;
  height: 156rpx;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 156rpx;
  color: #CCCCCC;
  text-align: center;
}