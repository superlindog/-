/* pages/jobList/index.wxss */

page {
  background-color: #F6F6F6;
}

.banner {
  width: 100%;
}

.sel1 {
  width: 100%;
  height: 120rpx;
  background: #FFFFFF;
  white-space: nowrap;
}

.sel1 .item {
  display: inline-block;
  height: 100%;
  margin: 0 40rpx;
  position: relative;
  text-align: center;
  justify-content: center;
  padding-top: 34rpx;
  box-sizing: border-box;
}

.sel1 .item .text {
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999999;
  font-weight: 400;
}

.sel1 .item .text-active {
  color: #17ADCA;
  font-weight: bold;
}

.sel1 .item .line {
  width: 38rpx;
  height: 4rpx;
  background: #17ADCA;
  position: absolute;
  bottom: 34rpx;
  left: 50%;
  transform: translate(-50%);

}

.sel2 {
  display: inline-block;
  position: relative;
  width: 196rpx;
  height: 64rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin: 32rpx 16rpx 0 40rpx;
  padding-left: 22rpx;
  font-size: 28rpx;
  line-height: 64rpx;
  color: #333333;
  font-weight: 400;
}

.sel2 .downimg {
  position: absolute;
  width: 20rpx;
  height: 16rpx;
  right: 20rpx;
  top: 24rpx;
}

.sel-input {
  position: relative;
  display: inline-block;
  width: 438rpx;
  height: 64rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin: 32rpx 0 0 0;
}

.sel-input .input {
  width: 340rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin-left: 16rpx;
  font-size: 28rpx;
  line-height: 64rpx;
  color: #CCCCCC;
}

.sel-input .text {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 64rpx;
  color: #17ADCA;
  position: absolute;
  right: 20rpx;
  top: 0;
}

.jobs {
  width: 670rpx;
  margin: 0 auto;
}


/* 职位卡片 */

.jobs .job-item {
  width: 670rpx;
  height: 230rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin-top: 16rpx;
  position: relative;
}

.jobs .job-item .jobname {
  height: 40rpx;
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #000000;
  position: absolute;
  left: 16rpx;
  top: 20rpx;
}

.jobs .job-item .wage {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #17ADCA;
  position: absolute;
  right: 16rpx;
  top: 20rpx;
}

.jobs .job-item .condition {
  height: 34rpx;
  display: flex;
  align-items: center;
  position: absolute;
  top: 90rpx;
}

.jobs .job-item .condition .condition-item {
  display: flex;
  height: 34rpx;
  margin: 0 16rpx;
  align-items: center;
}

.jobs .job-item .condition .condition-item .con-img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.jobs .job-item .condition .condition-item .con-text {
  height: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: #999999;
}

.jobs .job-item .line {
  width: 670rpx;
  height: 2rpx;
  background: #F6F6F6;
  position: absolute;
  bottom: 80rpx;
}

.jobs .company {
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
}

.jobs .company .coimg {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  margin-right: 8rpx;
}

.jobs .company .coname {
  height: 80rpx;
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 80rpx;
  color: #333333;
}

.jobs .company .tocobuttom {
  display: flex;
  align-items: center;
  position: absolute;
  right: 16rpx;
}

.jobs .company .tocobuttom .text {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 80rpx;
  color: #999999;
  margin-right: 8rpx;
}

.jobs .company .tocobuttom .right-img {
  width: 32rpx;
  height: 32rpx;
}


