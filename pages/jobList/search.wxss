/* pages/jobList/search.wxss */
page{
  background-color: #F6F6F6;
}

.select {
  width: 100%;
  height: 80rpx;
  background: #17ADCA;
  display: flex;
  align-items: center;
  position: relative;
}

.select .inputitem {
  width: 604rpx;
  height: 60rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin-left: 16rpx;
  display: flex;
  align-items: center;
}

.select .inputitem .img {
  width: 31rpx;
  height: 31rpx;
  margin-left: 24rpx;
}

.select .inputitem .input {
  width: 530rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: #333333;
  margin-left: 8rpx;
}

.select .cancel{
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: #FFFFFF;
  position: absolute;
  right: 38rpx;
}


/*  */

.jobs {
  width: 670rpx;
  margin: 0 auto;
}

.jobs .job-item {
  width: 670rpx;
  height: 230rpx;
  background: #FFFFFF;
  border-radius: 8px;
  margin-top: 16rpx;
  position: relative;
}

.jobs .job-item .jobname {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #000000;
  position: absolute;
  left: 16rpx;
  top: 20rpx;
}

.jobs .job-item .wage {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #17ADCA;
  position: absolute;
  right: 16rpx;
  top: 20rpx;
}

.jobs .job-item .condition {
  height: 34rpx;
  display: flex;
  align-items: center;
  position: absolute;
  top: 90rpx;
}

.jobs .job-item .condition .condition-item {
  display: flex;
  height: 34rpx;
  margin: 0 16rpx;
  align-items: center;
}

.jobs .job-item .condition .condition-item .con-img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.jobs .job-item .condition .condition-item .con-text {
  height: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: #999999;
}

.jobs .job-item .line {
  width: 670px;
  height: 2px;
  background: #F6F6F6;
  position: absolute;
  bottom: 80rpx;
}

.jobs .company {
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
}

.jobs .company .coimg {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  margin-right: 8rpx;
}

.jobs .company .coname {
  height: 80rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 80rpx;
  color: #333333;
}

.jobs .company .tocobuttom {
  display: flex;
  align-items: center;
  position: absolute;
  right: 16rpx;
}

.jobs .company .tocobuttom .text {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 80rpx;
  color: #999999;
  margin-right: 8rpx;
}

.jobs .company .tocobuttom .right-img {
  width: 32rpx;
  height: 32rpx;
}
